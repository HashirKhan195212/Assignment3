<!--Navbar with Bootstrap-->
<nav class="navbar navbar-expand-lg navbar-light" style="background: linear-gradient(90deg, #ff9a9e, #fad0c4); box-shadow: 0px 4px 6px rgba(0,0,0,0.1);">
    <!--Container to keep navbar contents aligned-->
    <div class="container-fluid">
      <!--Button for toggling the collapsed navbar-->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <!--Collapsible navbar content-->
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto">
          <!--Nav item for the Calculator page-->
          <li class="nav-item">
            <% if (title == "Exam Schedule") { %>
              <a class="nav-link active" href="/index" style="font-size: 18px; color: #555;">
            <% } else { %>
              <a class="nav-link" href="/index" style="font-size: 18px; color: #555;">
            <% } %>
              <!--Visual display of calculator navbar section-->
              <i class="fa-solid fa-calendar"></i> Schedule
            </a>
          </li>
          <% if (typeof displayName == 'string' && displayName) { %>
            <li class="navbar-text" style="font-size: 16px; margin-right: 15px; color: #333;">
              <i class="fas fa-lg fa-user"></i>
              Welcome, <% displayName %>
            </li>
            <li class="nav-item">
              <a href="/logout" class="nav-link" style="font-size: 18px; color: #555;">
                <i class="fas fa-lg fa-sign-out-alt"></i> Logout
              </a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a href="/login" class="nav-link" style="font-size: 18px; color: #555;">
                <i class="fas fa-lg fa-sign-in-alt"></i> Login
              </a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>  