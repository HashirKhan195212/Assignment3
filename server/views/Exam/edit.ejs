<!-- Call header -->
<%- include ../Partials/header.ejs %>
<!-- Call Navbar -->
<%- include ../Partials/main_nav.ejs %>
<!-- Main content container -->
<div class="container bg-white p-4 rounded shadow mt-4">
    <!-- Row to center the form -->
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <!-- Form for editing course information -->
            <h1 class="text-center mb-4">Edit Exam</h1>
            <form class="form" method="POST">
                <!-- Form group for the Course field -->
                <div class="form-group mb-3">
                    <label for="courseTextField">Course</label>
                    <input 
                        type="text" 
                        class="form-control" 
                        id="courseTextField" 
                        placeholder="Enter the Course" 
                        name="Course" 
                        value="<%= Schedule.Course %>" 
                        required>
                </div>
                <!-- Form group for the Course Code field -->
                <div class="form-group mb-3">
                    <label for="coursecodeTextField">Course Code</label>
                    <input 
                        type="text" 
                        class="form-control" 
                        id="coursecodeTextField" 
                        placeholder="Enter the Course Code" 
                        name="CourseCode" 
                        value="<%= Schedule.CourseCode %>" 
                        required>
                </div>
                <!-- Form group for the Professor field -->
                <div class="form-group mb-3">
                    <label for="professorTextField">Professor</label>
                    <input 
                        type="text" 
                        class="form-control" 
                        id="professorTextField" 
                        placeholder="Enter the Professor's name" 
                        name="Professor" 
                        value="<%= Schedule.Professor %>" 
                        required>
                </div>
                <!-- Form group for the Day field -->
                <div class="form-group mb-3">
                    <label for="dayTextField">Day</label>
                    <input 
                        type="text" 
                        class="form-control" 
                        id="dayTextField" 
                        placeholder="Enter the Day" 
                        name="Day" 
                        value="<%= Schedule.Day %>" 
                        required>
                </div>
                <!-- Form group for the Weight field -->
                <div class="form-group mb-4">
                    <label for="weightTextField">Weight</label>
                    <input 
                        type="text" 
                        class="form-control" 
                        id="weightTextField" 
                        placeholder="Enter the Weight" 
                        name="Weight" 
                        value="<%= Schedule.Weight %>" 
                        required>
                </div>
                <!-- Buttons for Submit and Cancel -->
                 <!-- Buttons for Submit and Cancel -->
                 <div class="d-flex justify-content-between">
                    <!-- Submit Button-->
                    <button class="btn btn-danger" type="submit">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                    <!-- Cancel Button-->
                    <a href="/index" class="btn btn-danger">
                        <i class="fas fa-undo"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Call footer -->
<%- include ../Partials/footer.ejs %>
